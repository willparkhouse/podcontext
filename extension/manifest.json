{
  "manifest_version": 3,
  "name": "PodContext",
  "version": "1.1",
  "description": "Download Spotify and YouTube transcripts for LLM context",
  "permissions": [
    "activeTab"
  ],
  "host_permissions": [
    "https://open.spotify.com/*",
    "https://spclient.wg.spotify.com/*",
    "https://www.youtube.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://open.spotify.com/*"
      ],
      "js": [
        "content.js"
      ],
      "css": [
        "styles.css"
      ]
    },
    {
      "matches": [
        "https://www.youtube.com/*"
      ],
      "js": [
        "youtube-content.js"
      ],
      "css": [
        "styles.css"
      ]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "inject.js"
      ],
      "matches": [
        "https://open.spotify.com/*"
      ]
    },
    {
      "resources": [
        "youtube-inject.js"
      ],
      "matches": [
        "https://www.youtube.com/*"
      ]
    }
  ]
}